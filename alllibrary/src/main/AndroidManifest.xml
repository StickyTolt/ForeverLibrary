<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.youhuikeji.martin.alllibrary">

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activity.SelectAreaActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.youhuikeji.martin.alllibrary.activity.ShowAVActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait" /> <!-- or android:screenOrientation="landscape" -->

        <activity
            android:name="com.youhuikeji.martin.alllibrary.activity.ShowImageActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

    </application>

</manifest>